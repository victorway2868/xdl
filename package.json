{
  "name": "xiaodouli-live-assistant",
  "version": "1.0.4",
  "description": "小斗笠直播助手",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "npm run build:all && electron .",
    "build:all": "vite build -c vite.renderer.config.mts && vite build -c vite.main.config.mts && vite build -c vite.preload.config.mts",
    "build:win": "npm run build:all && electron-builder --win nsis",
    "build:mac": "npm run build:all && electron-builder --mac dmg",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "redux",
    "plugins"
  ],
  "author": "Xiaodouli",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@aws-sdk/client-s3": "^3.583.0",
    "@aws-sdk/lib-storage": "^3.583.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "@types/pako": "^2.0.4",
    "antd": "^5.12.8",
    "electron-fetch": "^1.9.1",
    "electron-log": "^5.0.1",
    "lucide-react": "^0.537.0",
    "pako": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.20.1"
  },
  "build": {
    "appId": "com.xiaodouli.liveassistant",
    "productName": "小斗笠直播助手",
    "asar": true,
    "extraResources": [
      { "from": "public/icons", "to": "assets/icons" }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "public/icons/icon-256x256.png",
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ],
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "小斗笠直播助手"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icons/icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  }
}
